@model FootballShare.Web.Models.BettingCancelViewModel

@{
    ViewData["Title"] = "Cancel";
    var backParameters = new Dictionary<string, string>
    {
        { "seasonWeekId", Model.Event.SeasonWeekId },
        { "poolId", Model.Wager.PoolId.ToString() }
    };
}

<h1>Cancel Bet</h1>

<h3>Are you sure you want to cancel this bet?</h3>
<div>
    <hr />
    <h5>@Model.Event.Week.Name: @Model.Event.ToString()</h5>
    <dl class="row">
        <dt class="col-sm-2">
            Wager Amount
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Wager.Amount)
        </dd>
        <dt class="col-sm-2">
            Selection
        </dt>
        <dd class="col-sm-10">
            @Model.Wager.SelectedTeam.Name (@Model.Wager.SelectedTeamSpread)
        </dd>
        <dt class="col-sm-2">
            Bet Placed
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wager.WhenCreated)
        </dd>
    </dl>

    <form asp-action="Cancel">
        <input type="submit" value="Cancel" class="btn btn-danger" />
    </form>
</div>
<hr />
<div>
    <a asp-action="Events" asp-all-route-data="backParameters">Back to List</a>
</div>
